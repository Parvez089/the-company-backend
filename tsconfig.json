{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext", // NodeNext required for moduleResolution nodenext
    "moduleResolution": "nodenext",
    "rootDir": "./",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": ["*.ts", "src/**/*.ts"], // root ts files + src folder
  "exclude": ["dist", "node_modules"]
}
